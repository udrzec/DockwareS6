{% block sw_condition_value_content %}
    <div class="sw-condition-line-item-dimension-length sw-condition__condition-value">
        {% block sw_condition_line_item_dimension_length_field_operator %}
            <sw-condition-operator-select v-bind="{ operators, condition }"
                                          :disabled="disabled">
            </sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_line_item_dimension_length_field_amount %}
            <sw-number-field
                numberType="float"
                size="medium"
                :disabled="disabled"
                :placeholder="$tc('sw-product.settingsForm.placeholderLength')"
                :min="0"
                v-model="amount">
                <template #suffix>
                    <span>mm</span>
                </template>
            </sw-number-field>
        {% endblock %}
    </div>
{% endblock %}
