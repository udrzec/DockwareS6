{% block sw_condition_value_content %}
    <div class="sw-condition-cart-amount sw-condition__condition-value">
        {% block sw_condition_cart_amount_field_operator %}
            <sw-condition-operator-select v-bind="{ operators, condition }"
                                          :disabled="disabled">
            </sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_value_content %}
            <sw-number-field
                :min="0"
                :digits="20"
                size="medium"
                :disabled="disabled"
                v-model="amount">
            </sw-number-field>
        {% endblock %}
    </div>
{% endblock %}
